<%= simple_form_for TheDiscussion.new do |f| %>
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.input :topic, label_html: { class: "mdl-textfield__label" }, input_html: { class: "mdl-textfield__input" } %>
  </div>
  <%= f.button :submit, class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
<% end %>
