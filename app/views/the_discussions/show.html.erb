


<div class = "cards">
  <div class="demo-card-square mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand">
      <h2 class="mdl-card__title-text"><%= @discussion.topic %></h2>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <a href = "/posts/new" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
        Answer
      </a>
    </div>
  </div>

  <% if @discussion.posts %>
    <% @discussion.posts.each do | post | %>
      <div class="demo-card-square mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title mdl-card--expand">
          <h2 class="mdl-card__title-text"><%= post.user.name%></h2>
        </div>
        <div class="mdl-card__supporting-text">
          <%= post.text.html_safe%>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
